{
  "name": "@codemonger-io/cdk-rest-api-with-spec",
  "version": "0.4.1",
  "description": "Describe Amazon API Gateway and OpenAPI at once with CDK",
  "repository": {
    "type": "git",
    "url": "https://github.com/codemonger-io/cdk-rest-api-with-spec.git"
  },
  "main": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "files": [
    "dist/index.js",
    "dist/index.d.ts",
    "dist/index.js.map",
    "README.ja.md"
  ],
  "scripts": {
    "build": "rimraf dist && rollup -c && api-extractor run --local",
    "build:tsc": "tsc",
    "type-check": "tsc --noEmit",
    "prepare": "run-s build",
    "doc": "run-s build && api-documenter markdown --input-folder ./temp --output-folder ./api-docs/markdown",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "AWS",
    "CDK",
    "API Gateway",
    "OpenAPI"
  ],
  "author": "Kikuo Emoto <kemoto@codemonger.io>",
  "license": "MIT",
  "engines": {
    "node": ">=12.0"
  },
  "packageManager": "pnpm@10.28.0",
  "dependencies": {
    "openapi3-ts": "^2.0.2"
  },
  "devDependencies": {
    "@microsoft/api-documenter": "7.28.2",
    "@microsoft/api-extractor": "7.55.2",
    "@rollup/plugin-typescript": "12.3.0",
    "@types/node": "catalog:",
    "aws-cdk-lib": "catalog:",
    "constructs": "catalog:",
    "npm-run-all2": "^8.0.4",
    "rimraf": "^6.1.2",
    "rollup": "^4.55.1",
    "tslib": "^2.8.1",
    "typescript": "catalog:"
  },
  "peerDependencies": {
    "aws-cdk-lib": ">=2.201.0",
    "constructs": "^10.0"
  }
}
